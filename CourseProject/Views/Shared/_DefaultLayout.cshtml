@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <title>Van Bld. Spor Bilet</title>
    <link href="~/main/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/main/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/main/assets/css/templatemo-woox-travel.css">
    <link rel="stylesheet" href="~/main/assets/css/owl.css">
    <link rel="stylesheet" href="~/main/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
</head>

<body>
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <a href="index.html" class="logo">
                            <img src="~/main/assets/images/logo.png" alt="">
                        </a>
                        <ul class="nav">
                            <li><a href="/DefaultPage/Index/" class="active">Anasayfa</a></li>
                            <li><a href="about.html">Hakkında</a></li>
                            <li><a href="/SoccerPage/Index/">Vanspor | A takım</a></li>
                            <li><a href="/ContactPage/Index/">İletişim</a></li>
                            @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            {
                                <li><a href="/ContactDetails/Index/">Admin Sayfasına Git</a></li>
                            }
                            @if (signInManager.IsSignedIn(User))
                            {
                                <li><a>@User?.Identity?.Name</a></li>
                                <li><a asp-controller="Account" asp-action="Logout">Çıkış Yap</a></li>
                            }
                            else
                            {
                                <li><a href="/Account/Login/">Giriş Yap</a></li>
                                <li><a href="/Account/Register/">Kaydol</a></li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>


    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p>
                        Copyright © 2023, Vanspor Kulübü Resmi Web Sitesi | Sizin Takımınız
                        <br>Designed & Developed by Fatih Soyalp
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/main/vendor/jquery/jquery.min.js"></script>
    <script src="~/main/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/main/assets/js/isotope.min.js"></script>
    <script src="~/main/assets/js/owl-carousel.js"></script>
    <script src="~/main/assets/js/wow.js"></script>
    <script src="~/main/assets/js/tabs.js"></script>
    <script src="~/main/assets/js/popup.js"></script>
    <script src="~/main/assets/js/custom.js"></script>
</body>

</html>
