@model CourseProject.Models.Entity.Tag

@{
    ViewBag.Title = "EditTag";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
}


<div class="container text-center">
    <h1> Tag Düzenleme Sayfası</h1>
</div>

<div class="container py-5">
    <form method="post" asp-action="Index" asp-controller="Tag">

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Başlık</label>
            <input type="text" class="form-control" asp-for="FirstTitle" />
        </div>

        <div class="mb-3">
            <label class="form-label">Açıklama</label>
            <input type="text" class="form-control" asp-for="SecondTitle" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">
                Kaydet
            </button>
        </div>

    </form>
</div>
