@model List<CourseProject.Models.Entity.SliderItem>
@{
    int number = 1;

}

<section id="section-1">
    <div class="content-slider">
        @foreach (var value in Model)
        {
            <input type="radio" id="banner@(number)" class="sec-1-input" name="banner" @(number == 1 ? "checked" : "")>
            number++;
        }

        <div class="slider">
            @foreach (var value in Model)
            {
                <div id="top-banner-@(value.Id)" class="banner">
                    <div class="banner-inner-wrapper header-text">
                        <div class="main-caption">
                            <h2>@value.Description</h2>
                            <h1>@value.Title</h1>
                            <div class="border-button"><a href="about.html">Go There</a></div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <nav>
            <div class="controls">
                @for (int i = 1; i <= Model.Count; i++)
                    {
                    <label for="banner@(i)"><span class="progressbar"><span class="progressbar-fill"></span></span><span class="text">@i</span></label>
                }
            </div>
        </nav>

    </div>
</section>
