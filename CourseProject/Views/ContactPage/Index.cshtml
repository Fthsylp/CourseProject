@model List<CourseProject.Models.Entity.ContactDetail>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}
<br />
<br />
<br />
<div class="second-page-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @foreach (var item in Model)
                {
                    <h4>@item.Title</h4>
                    <h2>@item.SecondTitle</h2>
                    <p>@item.Description</p>
                    <div class="main-button"><a href="https://www.vanspor.org.tr/">@item.ButtonName</a></div>
                }
            </div>
        </div>
    </div>
</div>

<div class="more-info reservation-info">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-sm-6">
                    <div class="info-item">
                        <i class="fa fa-phone"></i>
                        <h4>Telefonla Bize Ulaşın!</h4>
                        <a href="#">@item.PhoneNumber</a>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6">
                    <div class="info-item">
                        <i class="fa fa-envelope"></i>
                        <h4>Mail Adresimizle Bize Ulaşın</h4>
                        <a href="#">@item.EmailAdress</a>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6">
                    <div class="info-item">
                        <i class="fa fa-map-marker"></i>
                        <h4>Stadyum Adresimiz</h4>
                        <a href="#">@item.Adress</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<br />
