@model List<CourseProject.Models.Entity.SoccerDetail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}
<style>
    .item {
        margin-bottom: 25px;
    }
</style>
<body>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="cities-town">
        <div class="container">
            <div class="row top-container">
                <div class="slider-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <h2>VanSpor <em>İle Tanışın</em></h2>
                        </div>
                        <div class="col-lg-12">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-lg-3">
                                        <div class="item">
                                            <div class="thumb">
                                                <img src="@item.Image" alt="@item.Name">
                                                <h4>@item.Name</h4>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />

</body>

