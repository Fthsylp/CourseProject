@model CourseProject.Models.Entity.AboutSlider

@{
    ViewData["Title"] = "Add About Slider";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
}

<br />
<h2 class="text-center">Yeni About Slider Ekleme Admin Kontrol Sayfası</h2>
<br />

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add New About Slider</h4>
            <div class="form-group">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="Title">Slider Başlığı:</label>
                            <input type="text" class="form-control" name="Title" required>
                        </div>
                        <div class="col-md-6">
                            <label for="Date">Slider Tarihi:</label>
                            <input type="date" class="form-control" name="Date" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="SecondTitle">Alt Başlık:</label>
                            <input type="text" class="form-control" name="SecondTitle" required>
                        </div>
                        <div class="col-md-6">
                            <label for="Image">Resim Linki:</label>
                            <input type="file" class="form-control" name="Image" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="Paragraph1">1. Paragraf:</label>
                            <textarea class="form-control" name="Paragraph1" required></textarea>
                        </div>
                        <div class="col-md-6">
                            <label for="Paragraph2">2. Paragraf:</label>
                            <textarea class="form-control" name="Paragraph2" required></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="Paragraph3">3. Paragraf:</label>
                            <textarea class="form-control" name="Paragraph3" required></textarea>
                        </div>
                        <div class="col-md-6">
                            <label for="Paragraph4">4. Paragraf:</label>
                            <textarea class="form-control" name="Paragraph4" required></textarea>
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
