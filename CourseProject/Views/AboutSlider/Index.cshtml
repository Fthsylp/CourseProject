@using CourseProject.Models.Entity
@model List<AboutSlider>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
    int number = 1;
}


    <br />
    <h2 class="text-center">Yeni About Slider Ekleme Admin Kontrol Sayfası</h2>
    <br />

    @if (Model.Count == 0)
    {
        <p>No experiences to display.</p>
    }
    else
    {
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Striped Table</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Slider Başlığı</th>
                                    <th>Slider Tarihi</th>
                                    <th>Resim linki</th>
                                    <th>Alt başlık</th>
                                    <th>1. Paragraf</th>
                                    <th>2. Paragraf</th>
                                    <th>3. Paragraf</th>
                                    <th>4. Paragraf</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@number</td>
                                        <td>@item.Title</td>
                                        <td>@item.Date</td>
                                        <td>@item.SecondTitle</td>
                                        <td><img src="@item.Image" /></td>
                                        <td>@item.Paragraph1</td>
                                        <td>@item.Paragraph2</td>
                                        <td>@item.Paragraph3</td>
                                        <td>@item.Paragraph4</td>
                                        <td><a href="/AboutSlider/EditAboutSlider/@item.Id" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i> Düzenle</a></td>
                                        <td><a href="/AboutSlider/DeleteAboutSlider/@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Sil</a></td>
                                    </tr>
                                    number++;
                                }
                            </tbody>
                        </table>
                        <a href="/AboutSlider/AddAboutSlider/" class="btn btn-light mt-3">Yeni Post</a>
                    </div>
                </div>
            </div>
        </div>
    }



