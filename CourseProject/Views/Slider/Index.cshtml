@using CourseProject.Models.Entity
@model List<SliderItem>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
    int number = 1;
}

<br />
<h2 class="text-center">Yeni Slider Ekleme Admin Kontrol Sayfası</h2>
<br />

@if (Model.Count == 0)
{
    <p>No experiences to display.</p>
}
else
{
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Striped Table</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Slider Başlığı</th>
                                <th>Slider Açıklaması</th>
                                <th>Resim linki</th>
                                <th>Eklenme Tarihi</th>
                                <th>resim</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@number</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.Description</td>
                                    <td>@item.Date.ToString("dd MMM yyyy")</td>
                                    <td><img src="@item.Image"/></td>
                                    <td><a href="/Slider/EditSlider/@item.Id" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i> Düzenle</a></td>
                                    <td><a href="/Slider/DeleteSlider/@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Sil</a></td>
                                </tr>
                                number++;
                            }
                        </tbody>
                    </table>
                    <a href="/Slider/AddSlider/" class="btn btn-light mt-3">Yeni Post</a>
                </div>
            </div>
        </div>
    </div>
}

