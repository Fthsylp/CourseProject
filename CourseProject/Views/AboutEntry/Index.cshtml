@model CourseProject.Models.Entity.AboutEntry

@{
    ViewBag.Title = "EditTag";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
}


<div class="container text-center">
    <h1> About Sayfası Girişi Düzenleme Sayfası</h1>
</div>

<div class="container py-5">
    <form method="post" asp-action="Index" asp-controller="AboutEntry" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Başlık</label>
            <input type="text" class="form-control" asp-for="FirstTitle" />
        </div>

        <div class="mb-3">
            <label class="form-label">Alt Başlık</label>
            <input type="text" class="form-control" asp-for="SecondTitle" />
        </div>

        <div class="mb-3">
            <label class="form-label">Açıklama</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mb-3">
            <label class="form-label">Maç Resim</label>
            <input type="file" class="form-control" asp-for="Image" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">
                Kaydet
            </button>
        </div>

    </form>
</div>
